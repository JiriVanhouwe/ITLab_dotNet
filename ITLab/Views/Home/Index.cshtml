@model ITLab.Models.Session;
@{
    ViewData["Title"] = "Home Page";
}

    <div class="slide-wrapper">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/img/banner01.jpg" alt="banner01" />
                    <div class="carousel-caption d-none d-md-block">
                        <h1>Welkom bij het ITLab</h1>
                        <h3>het belangrijkste lokaal van HoGent</h3>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/img/banner02.jpg" alt="banner02">
                    <div class="carousel-caption d-none d-md-block">
                        <h1>Raadpleeg de kalender</h1>
                        <h3>en ontdek de komende sessies</h3>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/img/banner03.jpg" alt="Third slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h1>Schrijf je in</h1>
                        <h3>en leer bij over uiteenlopende onderwerpen!</h3>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

<div>
    <table>
        <thead>
            <tr>
                <td><b>Titel:</b> @Model.Title</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><b>Beschrijving:</b> @Model.Description</td>
            </tr>
            <tr>
                <td><b>Datum:</b> @Model.Eventdate.ToShortDateString() : @Model.Starthour.ToString() - @Model.Endhour</td>
            </tr>
            <tr>
                <td><b>Lokaal:</b> @Model.ClassroomClassid</td>
            </tr>
        </tbody>
    </table>
</div>

