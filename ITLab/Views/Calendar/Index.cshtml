@model IEnumerable<ITLab.Models.Session>;

@{
    ViewData["Title"] = "Index";
}

<script>
 // calendar script comes here
</script>

<div class="text-center">
    <h1 class="display-4">De kalender</h1>
</div>
<div id='calendar'></div>

<table class="table">
    <tr>
        <th>Titel</th>
        <th>Beschrijving</th>
        <th>Datum</th>
        <th>Tijdstip</th>
        <th>Lokaal</th>
        <th>ID</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>
        @item.Title
    </td>
    <td>
        @item.Description
    </td>
    <td>
        @item.Eventdate.ToShortDateString()
    </td>
    <td>
        @item.Starthour - @item.Endhour
    </td>
    <td>
        @item.ClassroomClassid
    </td>
    <td>
        @item.Id
    </td>
    <td><a asp-controller="Session" asp-action="Index" asp-route-id="@item.Id" class="btn btn-secondary text-right ml-5">Ga naar sessie</a></td>
</tr>     
    }
</table>
