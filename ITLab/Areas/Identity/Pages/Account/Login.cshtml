@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<asp:ContentPlaceHolder ID="NavStyle" runat="server">
    <link href="~/css/normalNav.css" rel="stylesheet" />
</asp:ContentPlaceHolder>
<div class="container">


    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-5">
            <section>
                <form id="account" method="post">
                    <h4>Gebruik de gegevens verkregen bij de IT-Lab verantwoordelijke om in te loggen!</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Log in</button>
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-secondary">terug</a>
                    </div>

                </form>
            </section>
        </div>
        <div class="col-md-5">
            <img class="card-img-top" src="~/img/itlab-logo.jpg" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
